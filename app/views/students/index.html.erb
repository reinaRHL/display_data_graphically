

<h1 style= "text-align:center; color:gray">Student Information</h1>
<h3 style= "text-align:center"><%= link_to 'Add New Student!', new_student_path %></h3>

<body>
<hr>
<h4 style= "text-align:center">
<span>Sort by: </span>
<%= sortable "Name" %>
<%= sortable "Height" %>
<%= sortable "Weight" %>
<%= sortable "GPA" %>
<%= sortable "email" %></h4>

<hr style="color:light-gray">
</body>


<style>

body{
  font-family:sans-serif;
}

#fixed-size-square {
    display:inline-table;
    background: white;
    border: solid;
    border-color:black;
    border-width:1px;
    vertical-align: bottom;
   
}

#text-box{
  display: table-cell;
  vertical-align: middle;
  text-align: center;
}
 
</style>

<div>
  <% @students.each do |student| %>
     
    <div id= "fixed-size-square" style = "width:<%= student.weight%>px; height:<%= student.height %>px">
       <div id= "text-box" style = "width:<%= student.weight %> px; 
                    height:<%= student.height %>  px;
                    color:<%= student.color %>;">
         <b><%= student.name %></b><br><b><%= student.gpa %></b><br><b><%= student.email %></b><br><br>
         <%= link_to image_tag("public/a.jpg", alt:"show"), student_path(student) %><br>
         <%= link_to 'Edit', edit_student_path(student) %><br>
         <%= link_to 'Destroy', student_path(student),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
                    
        </div>
    </div>
    
  <% end %>

</div>
